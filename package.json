{
  "name": "boss-validator",
  "version": "0.3.0",
  "description": "The simplest library to validate data or forms.",
  "main": "src/js/boss.core.js",
  "scripts": {
    "preinstall": "npm install -g browser-sync",
    "test": "npm run build && browser-sync start --server './test' --serveStatic './dist' --files './test' --no-notify",
    "dev": "rm -rf ./dist && WEBPACK_ENV=dev webpack-dashboard -- webpack-dev-server --config ./webpack.dev.js",
    "build": "rm -rf ./dist && WEBPACK_ENV=build webpack"
  },
  "repository": "cezarlz/boss-validator",
  "keywords": [
    "js",
    "validator",
    "form",
    "vanilla",
    "javascript",
    "functional",
    "es6",
    "es5",
    "boss",
    "validation",
    "nojquery",
    "justjs",
    "small",
    "minified",
    "gzip"
  ],
  "author": "Cezar Luiz",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "browser-sync": "^2.17.5",
    "copy-webpack-plugin": "^3.0.1",
    "es6-promise": "^3.2.1",
    "eslint-loader": "^1.5.0",
    "exports-loader": "^0.6.3",
    "imports-loader": "^0.6.5",
    "jshint": "^2.9.3",
    "jshint-loader": "^0.8.3",
    "webpack": "^1.13.2",
    "webpack-dashboard": "^0.1.8",
    "webpack-dev-server": "^1.15.1",
    "webpack-polyfill-service-plugin": "0.0.2",
    "webpack-polyfills-plugin": "0.0.9"
  },
  "dependencies": {
    "form-serialize": "^0.7.1"
  }
}
